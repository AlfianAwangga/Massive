<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tv" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    //style
    <style name="tv.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tv.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    //size
    <style name="tv.Bold.16">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="tv.Bold.20">
        <item name="android:textSize">20sp</item>
    </style>

    //background
    <style name="tv.Bold.16.OutlineGrey">
        <item name="android:background">@drawable/outlined_grey</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tv.Bold.16.OutlineBlack">
        <item name="android:background">@drawable/outlined_black</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tv.Bold.20.OutlineGrey">
        <item name="android:background">@drawable/outlined_grey</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tv.Bold.20.OutlineBlack">
        <item name="android:background">@drawable/outlined_black</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>