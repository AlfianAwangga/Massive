<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16sp</item>
        <item name="android:fontFamily">@font/inter_black</item>
    </style>

    //Primary Button (Red)
    <style name="btn.Red">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@drawable/selector_enabled_pressed_red</item>
    </style>
    //Second Button (White)
    <style name="btn.White">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">#D0D0D0</item>
        <item name="strokeWidth">1dip</item>
    </style>
    //Correct Button (Green)
    <style name="btn.Green">
        <item name="android:textColor">@color/green</item>
        <item name="android:backgroundTint">@color/green1</item>
    </style>

    //Google Button
    <style name="btn.White.Google">
        <item name="android:drawableLeft">@drawable/img_google</item>
    </style>
    //Facebook Button
    <style name="btn.White.Facebook">
        <item name="android:drawableLeft">@drawable/img_facebook</item>
    </style>
</resources>