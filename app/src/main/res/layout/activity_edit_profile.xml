    <TextView
        android:id="@+id/tv_sound"
        style="@style/tv.interBold.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Sound effects"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username_profile" />

    <Switch
        android:id="@+id/switch_sound"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username_profile" />

    <TextView
        android:id="@+id/tv_animation"
        style="@style/tv.interBold.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Animations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sound" />

    <Switch
        android:id="@+id/switch_anime"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sound" />

    <TextView
        android:id="@+id/tv_fb"
        style="@style/tv.interBold.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Facebook Connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_animation" />

    <Switch
        android:id="@+id/switch_fb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_animation" />


    <TextView
        android:id="@+id/textView11"
        style="@style/tv.interBold.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Google Connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fb" />

    <Switch
        android:id="@+id/switch_google"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fb" />


    <Button
        android:id="@+id/btn_simpan_profile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:text="Simpan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/btn.White"
        android:layout_width="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>